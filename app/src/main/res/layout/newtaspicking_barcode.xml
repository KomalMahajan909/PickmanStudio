<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
 
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/a"
                     android:background="#68091B">
            
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/back"
                        android:id="@+id/back"
                        android:tint="@color/white"/>
            
            
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="16sp"
                        android:id="@+id/batchno"
                        android:layout_toRightOf="@+id/back"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/white"
                        />

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:textSize="18sp"
                        android:id="@+id/skucount"
                         android:textColor="@color/black"
                         android:gravity="center"
                        android:background="@drawable/shape_packing"/>

                </RelativeLayout>
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a">
    
    
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollMain"
            >
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         
            android:orientation="vertical"
            >
    
    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal"
                >
        
                <TextView
                    android:id="@+id/locationlabel"
                    android:labelFor="@+id/barcode"
                    android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:text="@string/location"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:gravity="center|left"
                    android:layout_gravity="center"
                    />
        
                <TextView
                    android:id="@+id/location"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                     android:layout_weight="1"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center|left"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit ="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:background="@drawable/basic_edittext_off_nopadding"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/barLabel"
                    android:labelFor="@+id/barcode"
                    android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:text="バーコード"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:gravity="center|left"
                    android:layout_gravity="center|left"
                    />


                <TextView
                    android:id="@+id/bardisple"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center|left"
                    android:padding="8dp"
                    android:background="@drawable/basic_edittext_off_nopadding"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/productnameLabel"
                    android:labelFor="@+id/barcode"
                    android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:text="品名"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:gravity="center|left"
                    android:layout_gravity="center|left"
                    />


                <TextView
                    android:id="@+id/productname"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center|left"
                    android:padding="8dp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit ="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:background="@drawable/basic_edittext_off_nopadding"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/spec1Label"
                    android:labelFor="@+id/barcode"
                    android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:text="規格1"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:gravity="center|left"
                    android:layout_gravity="center|left" />


                <TextView
                    android:id="@+id/spec_one"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center|left"
                    android:padding="8dp"
                    android:singleLine="true"
                     android:ellipsize="marquee"
                    android:marqueeRepeatLimit ="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:background="@drawable/basic_edittext_off_nopadding" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/spec2Label"
                    android:labelFor="@+id/barcode"
                    android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:text="規格2"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:gravity="center|left"
                    android:layout_gravity="center|left"  />


                <TextView
                    android:id="@+id/spec_two"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center|left"
                    android:padding="8dp"
                     android:ellipsize="marquee"
                    android:marqueeRepeatLimit ="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:background="@drawable/basic_edittext_off_nopadding"  />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/partlabel"
                    android:labelFor="@+id/barcode"
                    android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:text="品番"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:gravity="center|left"
                    android:layout_gravity="center|left" />

                <TextView
                    android:id="@+id/partno"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center|left"
                    android:padding="8dp"
                     android:ellipsize="marquee"
                    android:marqueeRepeatLimit ="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:background="@drawable/basic_edittext_off_nopadding" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:visibility="visible"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lotlabel"
                    android:labelFor="@+id/barcode"
                    android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:text="@string/lotno"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:gravity="center|left"
                    android:layout_gravity="center|left" />

                <TextView
                    android:id="@+id/lotno"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center|left"
                    android:padding="8dp"
                     android:ellipsize="marquee"
                    android:marqueeRepeatLimit ="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:background="@drawable/basic_edittext_off_nopadding" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:visibility="visible"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/exprilabel"
                    android:labelFor="@+id/barcode"
                    android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:text="消費期限"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:gravity="center|left"
                    android:layout_gravity="center|left" />

                <TextView
                    android:id="@+id/expridate"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center|left"
                    android:padding="8dp"
                     android:ellipsize="marquee"
                    android:marqueeRepeatLimit ="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:background="@drawable/basic_edittext_off_nopadding" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal" >
        
                <TextView
                    android:id="@+id/barcodeLabel"
                    android:labelFor="@+id/barcode"
                    android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:text="@string/barcode"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:gravity="center|left"
                    android:layout_gravity="center|left" />
        
                <EditText
                    android:id="@+id/barcode"
                    android:layout_height="38dp"
                    android:layout_width="0dp"
                    android:maxLength="100"
                    android:windowSoftInputMode="stateAlwaysHidden"
                    android:singleLine="true"
                    android:inputType="none"
                    android:editable="false"
                    android:textSize="16sp"
                    android:paddingLeft="8dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:selectAllOnFocus="true"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/basic_edittext_off_nopadding" />
            </LinearLayout>

    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal" >
        
                <TextView
                    android:id="@+id/ordernumberLabel"
                    android:labelFor="@+id/barcode"
                    android:layout_width="97dp"
                    android:layout_height="38dp"
                    android:text="注文番号"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_gravity="center" />
        
        
                <TextView
                    android:id="@+id/ordernumber"
                    android:layout_height="38dp"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center|left"
                    android:padding="8dp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit ="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:background="@drawable/basic_edittext_off_nopadding" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                     android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/qtyLabel"
                        android:labelFor="@+id/barcode"
                        android:layout_width="90dp"
                        android:layout_height="38dp"
                        android:text="@string/quantity"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:gravity="center|left"
                        android:layout_gravity="center|left" />

                    <EditText
                        android:id="@+id/qty"
                        android:layout_height="38dp"
                        android:layout_width="0dp"
                        android:maxLength="100"
                        android:windowSoftInputMode="stateAlwaysHidden"
                        android:singleLine="true"
                        android:inputType="none"
                        android:editable="false"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:selectAllOnFocus="true"
                        android:paddingLeft="8dp"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/basic_edittext_off_nopadding" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/totalqtyLabel"
                        android:labelFor="@+id/barcode"
                        android:layout_width="90dp"
                        android:layout_height="38dp"
                        android:text="@string/total_quantity"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/totalqty"
                        android:layout_height="38dp"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                          android:gravity="center"
                        android:padding="8dp"
                        android:background="@drawable/basic_edittext_off_nopadding"
                        />
                </LinearLayout>

            </LinearLayout>
    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <Button
                    android:layout_width="138dp"
                    android:layout_height="38dp"
                    android:text="@string/showkeyboard"
                    android:id="@+id/add_layout"
                    android:textColor="@color/black"
                    android:background="@drawable/gray_button_background"
                    android:onClick="AddLayout"
                    android:textSize="15dp"/>
        
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="@string/submit"
                    android:background="@color/packing_btn"
                    android:id="@+id/enter"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"/>
        
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/clear"
                    android:visibility="gone"
                    android:background="@color/packing_btn"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Clear"
                    />
            </LinearLayout>

            
            <Space
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

        </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/layout_number"
        android:visibility="gone"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>


</RelativeLayout>
