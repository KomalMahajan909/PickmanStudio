<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:visibility="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativelayout"
    android:background="@drawable/background_wallpaper"
    android:orientation="vertical"
    android:rowOrderPreserved="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@drawable/background_wallpaper"
        >

        <com.itechvision.ecrobo.pickman.Util.ActionBar
            android:id="@+id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </com.itechvision.ecrobo.pickman.Util.ActionBar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_main"
            android:layout_below="@id/actionbar"
            android:layout_alignParentEnd="true"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollMain"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:background="@drawable/textlabel_bg"
                            android:text="親品番バーコードスキャン"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:textSize="16dp"
                            />

                        <RadioGroup
                            android:id="@+id/parent_scan_rg"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            >

                            <RadioButton
                                android:id="@+id/no_rb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:buttonTint="@color/white"
                                android:checked="true"
                                android:onClick="ScanParent"
                                android:text="No"
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                />

                            <RadioButton
                                android:id="@+id/yes_rb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:buttonTint="@color/white"
                                android:checked="false"
                                android:onClick="ScanParent"
                                android:text="Yes"
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/gridMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        >

                        <TextView
                            android:id="@+id/packIdLabel"
                            android:labelFor="@+id/packId"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="セットID"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:background="@drawable/textlabel_bg"
                            />

                        <EditText
                            android:id="@+id/packId"
                            android:windowSoftInputMode="stateAlwaysHidden"
                            android:layout_height="30dp"
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:inputType="none"
                            android:editable="false"
                            android:layout_marginLeft="10dp"
                            android:maxLength="100"
                            android:singleLine="true"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/basic_edittext_off_nopadding"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/gridparBarcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:weightSum="3"
                        >

                        <TextView
                            android:labelFor="@+id/barcode"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:text="バーコード(親)"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:background="@drawable/textlabel_bg"
                            />

                        <EditText
                            android:id="@+id/parbarcode"
                            android:windowSoftInputMode="stateAlwaysHidden"
                            android:layout_height="30dp"
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:inputType="none"
                            android:editable="false"
                            android:layout_marginLeft="10dp"
                            android:maxLength="100"
                            android:singleLine="true"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/basic_edittext_off_nopadding"
                            />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:weightSum="3"
                        >

                        <TextView
                            android:id="@+id/parentCodeLabel"
                            android:labelFor="@+id/parentCode"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="親品番"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:background="@drawable/textlabel_bg"
                            />

                        <EditText
                            android:id="@+id/parentCode"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"
                            android:background="@drawable/basic_edittext_off_nopadding"
                            android:editable="false"
                            android:inputType="none"
                            android:maxLength="100"
                            android:selectAllOnFocus="true"
                            android:singleLine="true"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/gridBarcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:weightSum="3"
                        >

                        <TextView
                            android:id="@+id/barcodeLabel"
                            android:labelFor="@+id/barcode"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="バーコード(子)"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:background="@drawable/textlabel_bg"
                            />

                        <EditText
                            android:id="@+id/barcode"
                            android:windowSoftInputMode="stateAlwaysHidden"
                            android:layout_height="30dp"
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:inputType="none"
                            android:editable="false"
                            android:layout_marginLeft="10dp"
                            android:maxLength="100"
                            android:singleLine="true"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/basic_edittext_off_nopadding"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:weightSum="3"
                        >

                        <TextView
                            android:id="@+id/quantityLabel"
                            android:labelFor="@+id/quantity"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="@string/quantity"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:background="@drawable/textlabel_bg"
                            />

                        <EditText
                            android:id="@+id/quantity"
                            android:windowSoftInputMode="stateAlwaysHidden"
                            android:layout_height="30dp"
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:inputType="none"
                            android:editable="false"
                            android:layout_marginLeft="10dp"
                            android:maxLength="100"
                            android:singleLine="true"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/basic_edittext_off_nopadding"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/gridOrderDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:weightSum="3"
                        >

                        <TextView
                            android:id="@+id/locationLabel"
                            android:labelFor="@+id/location"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="@string/location"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:background="@drawable/textlabel_bg"
                            />

                        <EditText
                            android:id="@+id/location"
                            android:inputType="none"
                            android:editable="false"
                            android:layout_height="30dp"
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"
                            android:maxLength="100"
                            android:singleLine="true"
                            android:selectAllOnFocus="false"
                            android:focusable="false"
                            android:background="@drawable/basic_edittext_off_nopadding"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:weightSum="3"
                        >

                        <TextView
                            android:id="@+id/productCodeLabel"
                            android:labelFor="@+id/productCode"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="@string/productCode"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:background="@drawable/textlabel_bg"
                            />

                        <EditText
                            android:id="@+id/productCode"
                            android:inputType="none"
                            android:editable="false"
                            android:layout_height="30dp"
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"
                            android:maxLength="100"
                            android:singleLine="true"
                            android:selectAllOnFocus="false"
                            android:focusable="false"
                            android:background="@drawable/basic_edittext_off_nopadding"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:weightSum="3"
                        >

                        <TextView
                            android:id="@+id/productname_Label"
                            android:labelFor="@+id/productname"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:text="@string/productname"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:background="@drawable/textlabel_bg"
                            />

                        <TextView
                            android:id="@+id/productname"
                            android:inputType="none"
                            android:editable="false"
                            android:layout_height="30dp"
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:selectAllOnFocus="false"
                            android:focusable="false"
                            android:background="@drawable/basic_edittext_off_nopadding"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:weightSum="3"
                        >

                        <TextView
                            android:id="@+id/productQuantityLabel"
                            android:labelFor="@+id/productQuantity"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="@string/remainingQuantity"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:background="@drawable/textlabel_bg"
                            />

                        <EditText
                            android:id="@+id/productQuantity"
                            android:windowSoftInputMode="stateAlwaysHidden"
                            android:layout_height="30dp"
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:inputType="none"
                            android:editable="false"
                            android:layout_marginLeft="10dp"
                            android:singleLine="false"
                            android:selectAllOnFocus="false"
                            android:focusable="false"
                            android:background="@drawable/basic_edittext_off_nopadding"
                            />
                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="53dp"
                        android:text="@string/showkeyboard"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/add_layout"
                        android:onClick="AddLayout"
                        android:layout_marginTop="10dp"
                        />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_height="200dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:id="@+id/layout_number"
            android:visibility="invisible"
            >

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>