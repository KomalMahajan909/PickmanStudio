<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_btn_border">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_marginTop="4dp"
            android:text=""
            android:textColor="#000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#000"
            android:textSize="20sp" />

        <!--<EditText-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="30dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:paddingLeft="20dp"-->
        <!--android:id="@+id/catagorytext"-->
        <!--android:hint="Enter New Catagory"-->
        <!--android:background="@drawable/border"/>-->
        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:nestedScrollingEnabled="true"
            android:id="@+id/list" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="5dp"
            android:background="#000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="OK"
                android:textColor="#fff"
                android:id="@+id/dialog_save"
                android:textSize="13dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_btn_green"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="キャンセル"
                android:textColor="#fff"
                android:layout_marginLeft="30dp"
                android:id="@+id/dialog_cancel"
                android:textSize="13dp"
                android:layout_gravity="center"
                android:background="@drawable/red_rounded_button"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>