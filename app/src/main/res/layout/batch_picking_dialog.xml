<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="275dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/linearLayout"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="1"
                    android:columnCount="3"
                    >

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:textSize="20dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:textColor="@color/light_red"
                        android:text="ロケ:"
                        android:paddingLeft="5dp"
                        android:background="@drawable/dialog_label"
                        />

                    <TextView
                        android:id="@+id/dialog_txt_01"
                        android:layout_width="200dp"
                        android:background="@drawable/dialog_txt"
                        android:layout_height="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/light_red"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        />
                </GridLayout>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:rowCount="1"
                    android:columnCount="2"
                    >

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/light_red"
                        android:text="品番:"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:paddingLeft="5dp"
                        android:background="@drawable/dialog_label"
                        />

                    <TextView
                        android:layout_width="200dp"
                        android:background="@drawable/dialog_txt"
                        android:layout_height="30dp"
                        android:id="@+id/dialog_txt_02"
                        android:textSize="20dp"
                        android:textColor="@color/light_red"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:singleLine="true"
                        android:paddingLeft="5dp"
                        />
                </GridLayout>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:rowCount="1"
                    android:columnCount="2"
                    >

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/light_red"
                        android:text="品名:"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:paddingLeft="5dp"
                        android:background="@drawable/dialog_label"
                        />

                    <TextView
                        android:layout_width="200dp"
                        android:background="@drawable/dialog_txt"
                        android:layout_height="30dp"
                        android:id="@+id/dialog_txt_03"
                        android:textSize="20dp"
                        android:textColor="@color/light_red"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:singleLine="true"
                        android:paddingLeft="5dp"
                        />
                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:columnCount="2"
                    android:rowCount="1"
                    >

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:background="@drawable/dialog_label"
                        android:text="JAN:"
                        android:paddingLeft="5dp"
                        android:textColor="@color/light_red"
                        android:textSize="20dp"
                        />

                    <TextView
                        android:id="@+id/dialog_txt_04"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:background="@drawable/dialog_txt"
                        android:textColor="@color/light_red"
                        android:textSize="20dp"
                        android:paddingLeft="5dp"
                        />
                </GridLayout>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="1"
                    android:columnCount="2"
                    >

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/light_red"
                        android:text="LOT:"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:paddingLeft="5dp"
                        android:background="@drawable/dialog_label"
                        />

                    <TextView
                        android:layout_width="200dp"
                        android:background="@drawable/dialog_txt"
                        android:id="@+id/dialog_txt_05"
                        android:layout_height="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/light_red"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:singleLine="true"
                        android:paddingLeft="5dp"
                        />
                </GridLayout>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="1"
                    android:columnCount="2"
                    >

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/light_red"
                        android:text="QTY:"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:paddingLeft="5dp"
                        android:background="@drawable/dialog_label"
                        />

                    <TextView
                        android:id="@+id/dialog_txt_06"
                        android:layout_width="200dp"
                        android:background="@drawable/dialog_txt"
                        android:layout_height="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/light_red"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:singleLine="true"
                        android:paddingLeft="5dp"
                        />
                </GridLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_marginTop="20dp"
            android:id="@+id/done"
            android:background="@drawable/back_btn"
            />
    </LinearLayout>
</RelativeLayout>