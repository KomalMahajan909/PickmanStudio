<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutbackground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@drawable/background_wallpaper"
        >

        <com.itechvision.ecrobo.pickman.Util.ActionBar
            android:id="@+id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </com.itechvision.ecrobo.pickman.Util.ActionBar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_main"
            android:layout_below="@id/actionbar"
            android:layout_alignParentEnd="true"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollMain"
                >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <CheckBox
                    android:id="@+id/searchProduct"
                    android:layout_width="93dp"
                    android:layout_height="30dp"
                    android:onClick="searchProduct"
                    android:text="未検品数"
                    android:textSize="11dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textlabel_bg"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >


                <TextView
                    android:id="@+id/barcodeLabel"
                    android:labelFor="@+id/barcode"
                    android:layout_width="93dp"
                    android:layout_height="34dp"
                    android:text="@string/barcode"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/textlabel_bg"
                    />

                <EditText
                    android:id="@+id/barcode"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:maxLength="100"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:inputType="none"
                    android:editable="false"
                    android:selectAllOnFocus="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/basic_edittext_off_nopadding"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/lotnoLabel"
                    android:layout_width="93dp"
                    android:layout_height="31dp"
                    android:background="@drawable/textlabel_bg"
                    android:labelFor="@+id/lotno"
                    android:paddingTop="4dp"
                    android:text="Lotno."
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:visibility="gone"
                    />

                <EditText
                    android:id="@+id/lotno"
                    android:inputType="none"
                    android:editable="false"
                    android:layout_height="32dp"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:maxLength="100"
                    android:singleLine="true"
                    android:selectAllOnFocus="true"
                    android:background="@drawable/basic_edittext_off_nopadding"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:id="@+id/productCodeLabel"
                    android:labelFor="@+id/productCode"
                    android:layout_width="93dp"
                    android:layout_height="34dp"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/textlabel_bg"
                    android:text="@string/productCode"
                    />

                <EditText
                    android:id="@+id/productCode"
                    android:inputType="none"
                    android:editable="false"
                    android:layout_height="34dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:maxLength="100"
                    android:singleLine="true"
                    android:selectAllOnFocus="false"
                    android:focusable="false"
                    android:background="@drawable/basic_edittext_off_nopadding"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:id="@+id/productNameLabel"
                    android:labelFor="@+id/productname_Label"
                    android:layout_width="93dp"
                    android:layout_height="34dp"
                    android:text="商品名"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/textlabel_bg"
                    />

                <TextView
                    android:id="@+id/productname"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:inputType="none"
                    android:editable="false"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:layout_weight="1"
                    android:selectAllOnFocus="false"
                    android:focusable="false"
                    android:background="@drawable/basic_edittext_off_nopadding"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:id="@+id/standardOneLabel"
                    android:labelFor="@+id/standard1"
                    android:layout_width="93dp"
                    android:layout_height="34dp"
                    android:text="@string/standardone"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/textlabel_bg"
                    />

                <TextView
                    android:id="@+id/standard1"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/basic_edittext_off_nopadding"
                    android:editable="false"
                    android:ellipsize="marquee"
                    android:focusable="false"
                    android:inputType="none"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:id="@+id/standardTwoLabel"
                        android:labelFor="@+id/standard2"
                        android:layout_width="93dp"
                        android:layout_height="34dp"
                        android:text="@string/standardtwo"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/textlabel_bg"
                        />

                    <TextView
                        android:id="@+id/standard2"
                        android:inputType="none"
                        android:editable="false"   
                        android:layout_height="34dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:selectAllOnFocus="true"
                        android:background="@drawable/basic_edittext_off_nopadding"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:id="@+id/totalQuantityLabel"
                        android:labelFor="@+id/totalQuantity"
                        android:layout_width="93dp"
                        android:layout_height="34dp"
                        android:text="総在庫数"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/textlabel_bg"
                        />

                    <EditText
                        android:id="@+id/totalQuantity"
                        android:inputType="none"
                        android:editable="false"
                        android:layout_height="34dp"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:selectAllOnFocus="false"
                        android:focusable="false"
                        android:background="@drawable/basic_edittext_off_nopadding"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:id="@+id/orderQuantityLabel"
                        android:labelFor="@+id/orderQuantity"
                        android:layout_width="93dp"
                        android:layout_height="34dp"
                        android:text="有効在庫数"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/textlabel_bg"
                        />

                    <EditText
                        android:id="@+id/orderQuantity"
                        android:inputType="none"
                        android:editable="false"
                        android:layout_height="34dp"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:selectAllOnFocus="false"
                        android:focusable="false"
                        android:background="@drawable/basic_edittext_off_nopadding"
                        android:layout_marginLeft="10dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="ロケーション"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:background="@drawable/textlabel_bg"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="数量"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:background="@drawable/textlabel_bg"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="在庫区分"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:background="@drawable/textlabel_bg"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="Loc Order"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/textlabel_bg"
                        android:visibility="gone"
                        />
                </LinearLayout>

                <ListView
                    android:id="@+id/listLocation"
                    android:layout_below="@+id/locationHeader"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/list_border"
                    android:nestedScrollingEnabled="true"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/showkeyboard"
                    android:layout_marginTop="10dp"
                    android:id="@+id/add_layout"
                    android:onClick="AddLayout"
                    android:textColor="@color/black"
                    android:background="@drawable/gray_button_background"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Back"
                    android:textSize="15dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/btnBack"
                    android:background="@color/Redcolor"
                    android:onClick="Back"
                    android:visibility="gone"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:paddingRight="5dp"/>
                </LinearLayout>
            </LinearLayout>
            </ScrollView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_height="200dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:id="@+id/layout_number"
            android:visibility="invisible"
            >

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>