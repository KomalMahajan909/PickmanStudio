<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_wallpaper"
    tools:context="com.itechvision.ecrobo.pickman.Chatman.Stock.PrinterSelectActivity"
    >

    <com.itechvision.ecrobo.pickman.Util.ActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </com.itechvision.ecrobo.pickman.Util.ActionBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/actionbar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="140dp"
                android:layout_height="38dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/text_labels_no_padding"
                android:gravity="center"
                android:text="バーコードラベル"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:id="@+id/relative_barcode_slip"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/basic_edittext_off_nopadding"
                >

                <Spinner
                    android:id="@+id/spinner_barcode_slip"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="5dp"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="140dp"
                android:layout_height="38dp"
                android:background="@drawable/text_labels_no_padding"
                android:layout_gravity="center"
                android:text="入荷ラベル"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginTop="1dp"
                />

            <RelativeLayout
                android:id="@+id/relative_barcode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/basic_edittext_off_nopadding"
                >

                <Spinner
                    android:id="@+id/spinner_barcode_arrival"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="5dp"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gl1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="140dp"
                android:layout_height="38dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/text_labels_no_padding"
                android:text="一体型プリンター"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/relative_integrated"
                android:background="@drawable/basic_edittext_off_nopadding"
                >

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:id="@+id/spinner_integrated_printer"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="5dp"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gl"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="140dp"
                android:layout_height="38dp"
                android:background="@drawable/text_labels_no_padding"
                android:gravity="center"
                android:text="納品書プリンター"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="1dp"
                />

            <RelativeLayout
                android:id="@+id/relative_invoice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/basic_edittext_off_nopadding"
                >

                <Spinner
                    android:id="@+id/spinner_invoice_printer"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="5dp"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="140dp"
                android:layout_height="38dp"
                android:background="@drawable/text_labels_no_padding"
                android:text="後払いプリンター"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="1dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/relative_postpay"
                android:background="@drawable/basic_edittext_off_nopadding"
                >

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:id="@+id/spinner_postpay_printer"
                    android:paddingLeft="5dp"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="140dp"
                android:layout_height="38dp"
                android:background="@drawable/text_labels_no_padding"
                android:text="送り状"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="1dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/relative_csvfix"
                android:background="@drawable/basic_edittext_off_nopadding"
                >

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:id="@+id/spinner_csvfix"
                    android:paddingLeft="5dp"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="@string/submit"
                android:textColor="@color/black"
                android:background="@color/packing_btn"
                android:id="@+id/enter"
                android:textSize="15dp"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>